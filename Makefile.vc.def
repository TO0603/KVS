#CUDA_LINK_LIBRARY = cutil.lib
CUDA_LINK_LIBRARY = $(CUDA_LINK_LIBRARY)
!ENDIF
NVCC = nvcc
NVCCFLAGS = --host-compilation C++
!ENDIF


#=============================================================================
#  OPENCV_INCLUDE_PATH, OPENCV_LIBRARY_PATH, OPENCV_LINK_LIBRARY
#=============================================================================
!IF "$(KVS_SUPPORT_OPENCV)" == "1"
