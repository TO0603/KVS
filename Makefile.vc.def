#=============================================================================
#  CUDA_INCLUDE_PATH, CUDA_LIBRARY_PATH, CUDA_LINK_LIBRARY
#=============================================================================
!IF "$(KVS_SUPPORT_CUDA)" == "1"
CUDA_INCLUDE_PATH =
CUDA_LIBRARY_PATH =
CUDA_LINK_LIBRARY = cuda.lib cudart.lib
!IFDEF KVS_CUDA_DIR
